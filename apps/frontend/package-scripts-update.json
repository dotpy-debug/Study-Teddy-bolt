{
  "test": "jest",
  "test:watch": "jest --watch",
  "test:coverage": "jest --coverage",
  "test:coverage:ci": "jest --coverage --coverageReporters=text-lcov --coverageReporters=cobertura --coverageReporters=json-summary",
  "test:unit": "jest --testPathIgnorePatterns=e2e",
  "test:integration": "jest --testPathPattern=integration",
  "test:enhanced": "jest --testNamePattern=\"Enhanced Tests|enhanced\"",
  "test:hooks": "jest --testPathPattern=hooks",
  "test:components": "jest --testPathPattern=components",
  "test:utils": "jest --testPathPattern=lib",
  "test:all": "npm run test:unit && npm run test:e2e",
  "test:ci": "npm run test:unit",
  "e2e": "playwright test",
  "e2e:ui": "playwright test --ui",
  "e2e:debug": "playwright test --debug",
  "e2e:headed": "playwright test --headed",
  "e2e:chromium": "playwright test --project=chromium",
  "e2e:firefox": "playwright test --project=firefox",
  "e2e:webkit": "playwright test --project=webkit",
  "e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
  "test:e2e": "npm run e2e",
  "test:e2e:ci": "playwright test --reporter=html,junit",
  "playwright:install": "playwright install",
  "playwright:install-deps": "playwright install-deps"
}