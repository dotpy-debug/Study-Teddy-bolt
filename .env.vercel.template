# Vercel Environment Variables Template
# Copy these variables to your Vercel dashboard: https://vercel.com/dashboard/project/settings/environment-variables

# =============================================
# CORE APPLICATION
# =============================================
NEXTAUTH_URL=https://your-domain.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-32-chars-min
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NODE_ENV=production

# =============================================
# DATABASE (NEON)
# =============================================
DATABASE_URL=postgresql://username:password@ep-xxxx.us-east-1.aws.neon.tech/studyteddy?sslmode=require&pgbouncer=true&connect_timeout=15
DIRECT_DATABASE_URL=postgresql://username:password@ep-xxxx.us-east-1.aws.neon.tech/studyteddy?sslmode=require

# =============================================
# AUTHENTICATION
# =============================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# =============================================
# AI SERVICES
# =============================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =============================================
# EMAIL SERVICE
# =============================================
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=noreply@your-domain.com

# =============================================
# MONITORING
# =============================================
SENTRY_DSN=https://xxxx@xxxx.ingest.sentry.io/xxxx
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=studyteddy-frontend
SENTRY_AUTH_TOKEN=your-sentry-auth-token
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# =============================================
# CALENDAR INTEGRATION
# =============================================
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# =============================================
# FEATURE FLAGS
# =============================================
NEXT_PUBLIC_FEATURE_AI_CHAT=true
NEXT_PUBLIC_FEATURE_CALENDAR_INTEGRATION=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# =============================================
# SECURITY
# =============================================
JWT_SECRET=your-jwt-secret-32-chars-min
CSRF_SECRET=your-csrf-secret
WEBHOOK_SECRET=your-webhook-secret

# =============================================
# PERFORMANCE
# =============================================
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_WEB_VITALS_ATTRIBUTION=true