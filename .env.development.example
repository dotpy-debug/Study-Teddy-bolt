# Study Teddy - Development Environment Variables
# Copy this file to .env.development and fill in your actual values
# This file is for development environment only

# ==========================================
# ENVIRONMENT CONFIGURATION
# ==========================================
NODE_ENV=development
APP_NAME="Study Teddy"
APP_VERSION="1.0.0"
DEBUG=true

# ==========================================
# SERVER CONFIGURATION
# ==========================================
# Backend server
PORT=3001
HOST=0.0.0.0

# Frontend URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/studyteddy_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=studyteddy_dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres123

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=dev-jwt-secret-change-in-production-minimum-32-characters
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-minimum-32-characters
JWT_EXPIRE_TIME=7d
JWT_REFRESH_EXPIRE_TIME=30d

# ==========================================
# OAUTH CONFIGURATION
# ==========================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# ==========================================
# AI SERVICES CONFIGURATION
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ==========================================
# EMAIL CONFIGURATION (MailHog for development)
# ==========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="Study Teddy Dev <noreply@localhost>"

# ==========================================
# STORAGE CONFIGURATION
# ==========================================
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=http://localhost:3001/uploads

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# ==========================================
# DEVELOPMENT TOOLS
# ==========================================
API_DOCS_ENABLED=true
SWAGGER_ENABLED=true
HOT_RELOAD_ENABLED=true

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_AI_TUTOR=true
FEATURE_FLASHCARDS=true
FEATURE_ANALYTICS=true
FEATURE_GAMIFICATION=true

# ==========================================
# FRONTEND CONFIGURATION (Next.js)
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-change-in-production
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com