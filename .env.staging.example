# Study Teddy - Staging Environment Variables
# This file contains staging environment configuration

# ==========================================
# ENVIRONMENT CONFIGURATION
# ==========================================
NODE_ENV=staging
APP_NAME="Study Teddy Staging"
APP_VERSION="1.0.0"
DEBUG=false

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3001
HOST=0.0.0.0

# URLs
FRONTEND_URL=https://staging.studyteddy.com
BACKEND_URL=https://api-staging.studyteddy.com

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://username:password@staging-db-host:5432/studyteddy_staging
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://staging-redis-host:6379
REDIS_PASSWORD=staging-redis-password
REDIS_DB=0

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=staging-jwt-secret-minimum-32-characters-secure-random
JWT_REFRESH_SECRET=staging-refresh-secret-minimum-32-characters-secure-random
JWT_EXPIRE_TIME=7d
JWT_REFRESH_EXPIRE_TIME=30d
JWT_COOKIE_SECURE=true

# ==========================================
# OAUTH CONFIGURATION
# ==========================================
GOOGLE_CLIENT_ID=staging-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=staging-google-oauth-client-secret
GOOGLE_CALLBACK_URL=https://api-staging.studyteddy.com/auth/google/callback

# ==========================================
# AI SERVICES CONFIGURATION
# ==========================================
OPENAI_API_KEY=sk-staging-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASS=staging-sendgrid-api-key
EMAIL_FROM="Study Teddy Staging <noreply@staging.studyteddy.com>"

# ==========================================
# STORAGE CONFIGURATION
# ==========================================
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=staging-aws-access-key
AWS_SECRET_ACCESS_KEY=staging-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=studyteddy-staging-uploads

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
CORS_ORIGIN=https://staging.studyteddy.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_ENABLED=true

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# ==========================================
# MONITORING
# ==========================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_AI_TUTOR=true
FEATURE_FLASHCARDS=true
FEATURE_ANALYTICS=true
FEATURE_GAMIFICATION=true

# ==========================================
# FRONTEND CONFIGURATION (Next.js)
# ==========================================
NEXT_PUBLIC_API_URL=https://api-staging.studyteddy.com
NEXT_PUBLIC_APP_URL=https://staging.studyteddy.com
NEXTAUTH_URL=https://staging.studyteddy.com
NEXTAUTH_SECRET=staging-nextauth-secret-minimum-32-characters
NEXT_PUBLIC_GOOGLE_CLIENT_ID=staging-google-client-id.apps.googleusercontent.com
NEXT_PUBLIC_SENTRY_DSN=https://staging-frontend-sentry-dsn@sentry.io/project-id